# SMS Spam Detector Configuration

# Model Selection
# Options: heuristic, bert_tiny, aventiq, custom, ensemble, smart_router
MODEL_TYPE=smart_router

# Performance Targets
MAX_LATENCY_MS=50
MAX_WORKERS=4

# Retraining Configuration
FEEDBACK_THRESHOLD=100
AUTO_RETRAIN=true
RETRAIN_CHECK_INTERVAL=3600  # seconds

# Monitoring
ENABLE_MONITORING=true
ENABLE_DRIFT_DETECTION=true
DRIFT_CHECK_INTERVAL=3600  # seconds
EVIDENTLY_PORT=8001

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=info

# Twilio SMS Integration (optional)
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number (E.164 format)

# Model Paths
HEURISTIC_MODEL_PATH=models/heuristic
DISTILBERT_MODEL_PATH=models/distilbert_spam
AVENTIQ_MODEL_PATH=AventIQ-AI/SMS-Spam-Detection-Model
BERT_TINY_MODEL_PATH=mrm8488/bert-tiny-finetuned-sms-spam-detection

# Data Paths
DATA_DIR=data
PROCESSED_DATA_DIR=data/processed
FEEDBACK_DIR=data/feedback

# Smart Router Configuration
FAST_MODEL_CONFIDENCE_THRESHOLD=0.85

# Alerts
ALERT_WEBHOOK_URL=
ALERT_ON_HIGH_FPR=true
FPR_ALERT_THRESHOLD=0.02  # 2%
ALERT_ON_HIGH_LATENCY=true
LATENCY_ALERT_THRESHOLD=60  # ms

# Database (optional - for production feedback storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/spam_detector

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_FILE=logs/api.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
